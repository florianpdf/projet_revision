<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}WCS Partage!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% block stylesheets %}
            <!-- Materialize CSS -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/user/css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/share/css/style.css') }}">
        {% endblock %}
    </head>
    <body>

        <!-- Menu -->
        <nav>
            <div class="nav-wrapper nav_top">
                <a href="{{ path('share_homepage') }}" class="brand-logo"><img src="https://avatars1.githubusercontent.com/u/8874047?v=3&s=200"></a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="{{ path('fos_user_profile_show') }}">User</a></li>
                    <li><a href="{{ path('documents_index') }}">Documents</a></li>
                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}

        {% block fos_user_content %}{% endblock %}

        {% block javascripts %}

            <!-- jQuery 3.1.0 -->
            <script src="https://code.jquery.com/jquery-3.1.0.min.js"   integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s="   crossorigin="anonymous"></script>

            <!-- Materialize JavaScript -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>

            <!-- Main JS -->
            <script src="{{ asset('bundles/user/js/main.js') }}"></script>

        {% endblock %}
    </body>
</html>

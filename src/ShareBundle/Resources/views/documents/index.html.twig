{% extends 'base.html.twig' %}

{% block body %}
    <h1>Documents list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Fichier</th>
                <th>Datepublication</th>
                <th>Datemodification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td><a href="{{ path('documents_show', { 'id': document.id }) }}">{{ document.id }}</a></td>
                <td>{{ document.titre }}</td>
                <td>{{ document.description }}</td>
                <td>{{ document.fichier }}</td>
                <td>{% if document.datePublication %}{{ document.datePublication|date('Y-m-d') }}{% endif %}</td>
                <td>{% if document.dateModification %}{{ document.dateModification|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('documents_show', { 'id': document.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('documents_edit', { 'id': document.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('documents_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
